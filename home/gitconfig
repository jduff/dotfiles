[user]
name = John Duff
email = duff.john@gmail.com

[color]
ui = true
grep = auto

[core]
excludesFile=~/.global_gitignore

[push]
default = nothing

[grep]
lineNumber = true
patternType = perl

[include]
path = ~/.gitconfig.local

[format]
pretty = format:%C(auto)%h %C(blue)%aN %Creset%s %C(green)(%ar)

[init]
templatedir = ~/.git_template
	defaultBranch = main

[alias]
ctags = !.git/hooks/ctags
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
